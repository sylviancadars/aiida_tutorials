@SET BASISDIR  /gpfslocalsup/spack_soft/cp2k/6.1/intel-19.0.4-2che3reso4wbexi7dfjaaqfmtyzu3l7q/share/data
&GLOBAL
  PROJECT SiCN 
  PRINT_LEVEL LOW
  RUN_TYPE MD
  WALLTIME 01:30:00 
&END GLOBAL

#&EXT_RESTART
#  RESTART_FILE_NAME SiCN-1.restart
#&END EXT_RESTART

&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
    &PRINT
      &STRESS_TENSOR ON
      &END STRESS_TENSOR
    &END PRINT
  &DFT
      BASIS_SET_FILE_NAME  ${BASISDIR}/GTH_BASIS_SETS
      BASIS_SET_FILE_NAME  ${BASISDIR}/BASIS_MOLOPT_UCL
      POTENTIAL_FILE_NAME  ${BASISDIR}/GTH_POTENTIALS
#      WFN_RESTART_FILE_NAME SiCN-RESTART.wfn
    &MGRID
      CUTOFF 400
      REL_CUTOFF 50
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      WF_INTERPOLATION ASPC
      EXTRAPOLATION_ORDER 0
      METHOD GPW
    &END QS
    &SCF
      &DIAGONALIZATION OFF
      &END DIAGONALIZATION
      &MIXING
        ALPHA 0.3
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING
      !CHOLESKY INVERSE
      SCF_GUESS RESTART 
      
      EPS_SCF 1.0E-6
      &OT ON
        MINIMIZER CG
        LINESEARCH 3PNT
        PRECONDITIONER FULL_SINGLE_INVERSE
        ENERGY_GAP 0.01
        STEPSIZE 0.03
      &END OT
      MAX_SCF 30
      MAX_SCF_HIST 2
      &OUTER_SCF
        MAX_SCF 30
        EPS_SCF 1.0E-6
      &END OUTER_SCF

      &PRINT
        &RESTART
          &EACH
            QS_SCF 30
          &END EACH
          BACKUP_COPIES 2
        &END RESTART
        &RESTART_HISTORY
          BACKUP_COPIES 2
        &END RESTART_HISTORY
      &END PRINT


    &END SCF

    &XC
      &XC_FUNCTIONAL 
       &PBE
       &END PBE
      &END XC_FUNCTIONAL
    &END XC

    &PRINT
    &END PRINT
  &END DFT

  &SUBSYS
    &CELL
      ABC 13.17 13.17 13.17 
      ALPHA_BETA_GAMMA 90.0000 90.0000 90.0000
      PERIODIC XYZ
    &END CELL    
    &TOPOLOGY
      COORDINATE XYZ
      COORD_FILE_NAME ./last_conf_300K.xyz
    &END TOPOLOGY

    &PRINT
      &ATOMIC_COORDINATES ON
      &END
    &END

    &KIND Si
      BASIS_SET    DZVP-GTH-q4
      POTENTIAL    GTH-PBE-q4
    &END
    &KIND C
      BASIS_SET DZVP-GTH-q4
      POTENTIAL GTH-PBE-q4
    &END
    &KIND N
      BASIS_SET DZVP-GTH-q5
      POTENTIAL GTH-PBE-q5
    &END
    &KIND H
      BASIS_SET DZVP-GTH-q1
      POTENTIAL GTH-PBE-q1
    &END
  &END SUBSYS
&END FORCE_EVAL

&MOTION
#  &GEO_OPT
#    OPTIMIZER BFGS
#    MAX_ITER 1000
#  &END GEO_OPT

  &MD
    ENSEMBLE LANGEVIN
    &LANGEVIN
       GAMMA       0.1        # gamma_L
       NOISY_GAMMA 0.03      # gamma_D
    &END LANGEVIN
    TEMPERATURE [K] 300
    TIMESTEP [fs] 2.00
    STEPS 7500
#    &BAROSTAT
#      PRESSURE 0.0000                 # PRESSURE, unit[bar]
#      TIMECON 30
#    &END BAROSTAT
#     &THERMOSTAT
#       REGION MASSIVE
#       TYPE NOSE
#       &NOSE
#         TIMECON  20 
#       &END NOSE
#     &END THERMOSTAT
   &END MD
 &PRINT
   &TRAJECTORY
     &EACH
       MD 1
     &END EACH
   &END TRAJECTORY
    &STRESS ON
     &EACH
        MD 1
     &END EACH
     FILENAME pressure
   &END STRESS
   &VELOCITIES OFF
   &END VELOCITIES
   &FORCES OFF
   &END FORCES
   &RESTART_HISTORY
     &EACH
       MD 1000
     &END EACH
   &END RESTART_HISTORY
   &RESTART
     BACKUP_COPIES 2
     &EACH
       MD 1
     &END EACH
   &END RESTART
  &END PRINT
&END MOTION

